<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="24dp"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/img_horizontal_item"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:background="@drawable/top_rounded_linear_layout"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="@string/card_image"
                />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title_horizontal_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Konten 1" />

            <TextView
                android:id="@+id/tv_subtitle_horizontal_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                tools:text="4 Mei 2023 9:00"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_second_subtitle_horizontal_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/baseline_access_time_16"
                android:drawablePadding="4dp"/>
            <TextView
                android:id="@+id/tv_second_subtitle_horizontal_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:gravity="end"
                tools:text="Julian Tantra"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@id/tv_subtitle_horizontal_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableStartCompat="@drawable/baseline_person_outline_16"
                android:drawablePadding="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>