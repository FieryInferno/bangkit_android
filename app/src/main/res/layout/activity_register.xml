<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    tools:context=".ui.authentication.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:id="@+id/btn_register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="@string/back_button"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daftar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:shape="ring"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="100dp">
        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@drawable/top_rounded_linear_layout"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/card_image"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nama"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/green_400"
        android:layout_marginTop="24dp"
        android:drawablePadding="4dp"/>

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text_white"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:textColor="@color/green_100"
        android:textColorHint="@color/green_200"
        android:hint="@string/masukkan_nama"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nomor_telepon"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/green_400"
        android:layout_marginTop="24dp"
        android:drawablePadding="4dp"/>

    <EditText
        android:id="@+id/et_nomor_telepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text_white"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:textColor="@color/green_100"
        android:textColorHint="@color/green_200"
        android:hint="@string/masukkan_nomor_telepon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kata_sandi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/green_400"
        android:layout_marginTop="24dp"
        android:drawablePadding="4dp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text_white"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textColor="@color/green_100"
        android:textColorHint="@color/green_200"
        android:hint="@string/masukkan_kata_sandi"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text_green"
        android:layout_marginBottom="16dp"
        android:text="@string/daftar"
        android:textColor="@color/green_400" />

</LinearLayout>